<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_server"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/player_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/player_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/player_pic"
            android:src="@drawable/player_small" />
	    
        <TextView
	        android:id="@+id/player_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="12sp"
	        android:layout_toRightOf="@id/player_pic"
	        android:text="@string/player_name" />
        
	    <TextView
	        android:id="@+id/player_pokernum"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="12sp"
	        android:layout_toRightOf="@id/player_pic"
	        android:layout_below="@id/player_name"
	        android:text="@string/player_pokernum" />
	
	    <ImageView
	        android:id="@+id/timer_img"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:contentDescription="@string/timer"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/timer_small" />
	    
    </RelativeLayout>
    	
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_info"
        android:layout_centerHorizontal="true" >
       <!--  <Button
	        android:id="@+id/start"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/start" 
	        android:visibility="invisible"/> -->
	
	    <Button
	        android:id="@+id/give_up"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/button_giveup" />
	
	    <Button
	        android:id="@+id/reselect"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/button_repick" />
	
	    <Button
	        android:id="@+id/push_poker"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/button_push_no"
	        android:clickable="false" />
	    
	    <!-- <Button
	        android:id="@+id/jiao_dizhu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/jiao_dizhu"
	        android:visibility="invisible" /> -->
    </LinearLayout>
    
    <com.cstzju.poker.PokerView
        android:layout_below="@id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="240dp" />


</RelativeLayout>